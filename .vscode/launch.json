    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pipeline.py with args",
            "type": "debugpy",
            "request": "launch",
            "program": "make_trace/pipeline.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${workspaceFolder}/tlsf_specs/spurious_arbiter.tlsf",
                "${workspaceFolder}/random_config.toml"
            ],
            "env": {
                "PATH": "/usr/local/bin:${env:PATH}",
                "LD_LIBRARY_PATH": "/usr/local/lib:${env:LD_LIBRARY_PATH}"
            }
        }
    ]
}
