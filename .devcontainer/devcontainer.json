{
    "name": "reasoning_from_ltl",
    // "build": { "dockerfile": "HOA.Dockerfile", "context": ".." },
    "image": "nik101010/tempo-rl:latest",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=${localWorkspaceFolder}/tlsf_specs,target=/specs,type=bind",
        "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "editor.tabSize": 4,
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.black-formatter",
                "ms-python.isort",
                "github.vscode-pull-request-github",
                "vscodevim.vim",
                "docker.docker",
                "ms-azuretools.vscode-docker",
                "rogalmic.bash-debug",
                "anthropic.claude-code",
                "eamodio.gitlens",
                "visualstudioexptteam.vscodeintellicode",
                "yzhang.markdown-all-in-one",
                "foxundermoon.shell-format"
            ]
        }
    },
    "overrideCommand": true,
    "postCreateCommand": "chsh -s /usr/bin/zsh"
}